body {
    font-size: 12px;
    font-family: Arial;
}

/* main portlet button */
.portlet-button .btn {
    float: right;
    margin: 0 0 10px 10px;
}

.portlet-title .caption-subject {
    color: #578ebe;
}

.portlet-title .actions .btn.more, .portlet-body .vesselSchedule .btn.more {
    color: #01bae8;
    text-decoration: underline;
}

.portlet.light {
    padding: 25px;
}

.portlet-body .table td {
    font-size: 12px;
}

.buttonsContainer .portlet-button {
    float: left;
}

.buttonsContainer .portlet-button .fa-plus-square {
    margin: 5px 0 0;
    font-size: 34px;
    line-height: 18px;
    color: #8e99ab;
    cursor: pointer;
}

.portlet-body .actionButtonsHolder .btn {
    margin: 0 0 10px;
}

/* override menu tabs color  */

.kpi .portlet-body .nav-tabs .active {
    border-bottom-color: #00aae0;
}

.portlet .datePickerHolder {
    float: left;
}

.portlet .datePickerHolder .input-group-addon {
    background: none;
    border: none;
}

/* dashboard */
.topMenu {
    padding: 10px 10px;
    border-bottom: 1px solid #dae2ea;
    background-color: #e2e2e2;
}

.topMenu .actionButtonsHolder {
    margin: 3px 0 0;
}

.topMenu .actionButtonsHolder .focus, .bottomButtons .btn.focus {
    background: #fff;
    border-color: #c49f47;
    color: #c49f47;
}

.topMenu .nav.nav-tabs, .topMenu .tabbable-line > .tab-content {
    border: none;
}

.topMenu .searchForm {
    margin: 0 10px 0 0;
}

.topMenu .tabbable-line > .tab-content {
    padding: 0;
}

/* new request page */
.portlet-body .locationVoyageHolder {
    width: 12%;
}

.portlet-body .locationVoyageHolder .voyage {
    color: #cccccc;
}

.productInformation .portlet-body .control-label, .productInformation .locationVoyageHolder {
    padding-top: 7px;
}

.productInformation .eta,
.productInformation .etb,
.productInformation .etd,
.productInformation .agent,
.productInformation .buyer {
    padding: 0 5px;
    margin: 0 -40px 0 0;
    width: 20%;
}

.productInformation .row.dataFinder {
    margin: 0 0 20px 0;
    padding-bottom: 20px;
    border-bottom: 1px solid #eee;
}

.productInformation .row.dataFinder:last-child {
    border-bottom: none;
}

.productInformation .row.query {
    padding: 0 0 20px;
}

.productInformation .fa-plus-square,
.productInformation .fa-minus-square {
    font-size: 16px;
}

.bottomButtons .actionButtonsHolder {
    float: right;
}